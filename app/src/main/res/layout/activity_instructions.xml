<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="p14141535.superslidepenguin.Controller.InstructionsActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height= "wrap_content"
        android:text="Instructions"
        android:background="@null"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:id="@+id/InstructionsTitle" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height= "wrap_content"
        android:text="To play you need to stop the pillars from moving up and down. To do this you must tap. This will allow your penguin to pass through and you will gain a point. Get as far as you can. Have fun!"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:textSize="20dp"
        android:id="@+id/MusicTitle"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        />

    <ImageButton
        android:layout_width = "wrap_content"
        android:layout_height= "wrap_content"
        android:scaleType="centerInside"
        android:background="@null"
        android:src="@drawable/back"
        android:id="@+id/Back_Button"
        android:onClick="GoBack"
        android:layout_marginTop="240dp"/>
</RelativeLayout>
