<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="p14141535.superslidepenguin" >

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/penguin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Controller.MainActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Controller.GameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Controller.OptionsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Controller.LeaderboardsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name=".Controller.InstructionsActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Controller.SplashActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
